<div class="jumbotron text-center mb-4 text-uppercase" style="margin-bottom:0">
    <h1 class="display-3">Delivery</h1>
  </div>
<div class="container">

  <% if (success.length > 0) { %>
    <div class="alert alert-success">
        <%= success %> </div>
