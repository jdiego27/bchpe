      <%= success %> </div>
<% } %>
</div>
<div class="container" style="margin-top: 30px;">
  
        <div class="row">
                <!--FORM-->
                <div class="col-md-5">
                  <div class="card">
                    <div class="card-body">
                      <form action="/agregar-delivery" method="POST">
                        <div class="form-group">
                          <label for="name">Nombre</label>
                          <input class="form-control" type="text" name="name" placeholder="" id="name" value="" required>
                         <label for="lastname">Apellido</label>
                          <input class="form-control" type="text" name="lastname" placeholder="" id="lastname" value="" required>
        
                              <div class="form-group">
                                <label for="nationality">Nacionalidad</label>
                                <select class="form-control" id="nationality" name="nationality" value="" required>
                                   <option></option>
                                   <option>Peruana</option>
                                   <option>Otra</option>
                                </select>
                              </div>

                          <label for="lastname">DNI / Otro documento de Identidad</label>
                          <input class="form-control" type="text" name="document_identity" placeholder="" id="document_identity" value="" required>

                            
                            <div class="form-group">
                                <label for="district">Distrito</label>
                                <select class="form-control" id="district" name="district" value="" required>
                                  <option></option>
                                    <% for(var i=0; i < yo.length; i++){%>
                                  <option><%= yo[i].district %></option>
                                  <% } %>
                                </select>
                              </div>
                              
                              <label for="cellphone">Celular</label>
                              <input class="form-control" type="text" name="cellphone" placeholder="" id="cellphone" value="" required>
             
                              <div class="form-group">
                                <label for="transport">Tipo de Transporte</label>
                                <select name="transport" id="transport" class="form-control" value="" required>
                                  <option value=""> </option> 
                                    <option value="Moto">Moto</option>
                                    <option value="Bicicleta">Bicicleta</option>
                                    </select>
                                    <label for="plate">Placa</label>
                                <input type="text" name="plate" class="form-control" id="plate" disabled required>
                                </div>

                                  <script>
                                    var dropdown = document.getElementById('transport');
                                    dropdown.onchange = findType;
                                
                                var moto1 = document.getElementById('plate');
                                                                
                                function findType() {
                                
                                if (dropdown.value === 'Moto') {
                                       moto1.disabled = false;
                                       
                                 } else {
                                      moto1.disabled = true;
                                  
                                  }
                                }
                                  </script>
                                 

